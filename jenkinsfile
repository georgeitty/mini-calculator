pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                ls -l
                sh 'chmod +x calc_test.py'
                sh 'chmod +x calc.py'
                ls -l
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'python3 --version'
                sh 'python3 -m unittest calc_test.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                echo "started docker stage..."
                sh 'docker build -t "georgeitty/calc-app-image$BUILD_NUMBER" .'
            }
        }
    }
}